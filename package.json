{
  "name": "blog",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "start": "npm i && npm run install:client && npm run install:server && npm run start:dev",
    "start:dev": "concurrently \"npm run start:server\" \"npm run start:client\"",
    "install:client": "cd app/react-blog && npm i",
    "install:server": "cd app/nest-blog && npm i",
    "start:client": "cd app/react-blog && npm run dev",
    "start:server": "cd app/nest-blog && npm run dev"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
