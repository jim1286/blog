{
  "name": "blog",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "build": "pnpm --filter './packages/*' --filter './apps/*' -r run build",
    "build:packages": "pnpm --filter './packages/*' -r run build",
    "dev": "pnpm --filter './packages/*' --filter './apps/*' -r run dev",
    "test": "pnpm --filter './packages/*' --filter './apps/*' -r run test",
    "lint": "pnpm --filter './packages/*' --filter './apps/*' -r run lint",
    "clean": "pnpm -r run clean",
    "type-check": "pnpm -r run type-check"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
